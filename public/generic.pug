head
  title= drug_name
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no')
  link(rel='stylesheet' href='assets/css/main.css')
  noscript
    link(rel='stylesheet' href='assets/css/noscript.css')
// Wrapper
#wrapper
  // Header
  header#header
    .inner
      // Logo
      a.logo(href='index.html')
        span.symbol
          img(src='images/logo.svg' alt='')
        span.title Medherence
      // Nav
      nav
        ul
          li
            a(href='#menu') Menu
  // Menu
  nav#menu
    h2 Menu
    ul
      li
        a(href='/') Home
      li
        a(href='generic.html') Ipsum veroeros
      li
        a(href='generic.html') Tempus etiam
      li
        a(href='generic.html') Consequat dolor
      li
        a(href='elements.html') Elements
  // Main
  #main
    .inner
      header
        h1= drug_name
      section.tiles
        article.style3
          span.image
            img(src="images/pic01.jpg" alt="")
          a(href="/drug/#{drug_name}")
            h2= drug_name
            div.content
                p(style="margin: 0 0 0.5em 0;") #{drug_name}
                p 
                  | Number of Pills: #{drug_info.numberOfPills} <br/>
                  | Interactions: #{drug_name}

// Scripts
script(src='assets/lib/jquery.min.js')
script(src='assets/lib/browser.min.js')
script(src='assets/lib/breakpoints.min.js')
script(src='assets/lib/util.js')
script(src='assets/lib/main.js')
